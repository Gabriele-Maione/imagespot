<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox styleClass="home-center" stylesheets="@../../css/home.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.imagespot.controller.SearchedUsersController">
   <children>
      <HBox>
         <VBox.margin>
            <Insets left="10.0" />
         </VBox.margin>
         <children>
            <Label minHeight="32.0" prefHeight="32.0" text="Searched Users" textFill="#7678ed">
               <font>
                  <Font name="Open Sans Semibold" size="18.0" />
               </font>
            </Label>
            <ProgressIndicator fx:id="progressIndicator" prefHeight="30.0" prefWidth="30.0">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </ProgressIndicator>
         </children>
      </HBox>
      <ScrollPane fitToWidth="true" hbarPolicy="NEVER" styleClass="transparent" stylesheets="@../../css/home-style.css" VBox.vgrow="ALWAYS">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
         <content>
            <FlowPane fx:id="flowPane" />
         </content>
      </ScrollPane>
   </children>
   <padding>
      <Insets left="10.0" top="10.0" />
   </padding>
</VBox>
